@model CurrencyApplication.Models.Currency
@{
    ViewData["Title"] = "Currency";
}
<div class="container">
    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <h2>Currency</h2>
            <label asp-for="USD"></label>
            <span class="badge" style="color:black">@Model.USD TL</span>
            <br />
            <label asp-for="EUR"></label>
            <span class="badge" style="color:black">@Model.EUR TL</span>
            <br />
            <label asp-for="GBP"></label>
            <span class="badge" style="color:black">@Model.GBP TL</span>
        </div>
    </div>
</div>